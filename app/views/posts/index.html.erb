<h1> Listins Posts </h1>
<%= link_to "New Post", new_posts_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
 	<% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.name, post_path(post) %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: "Are you sure you want to delete?" } %></td>
    </tr>
  <% end %>
</table>